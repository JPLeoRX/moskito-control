{
    "mailNotificationEnabled" : false,
    "notificationsMutingTime": 60,
    "defaultApplication" : "Burgershop",

    "@applications": [
        {
        "name": "Burgershop",
        "@components": [
            {
                "name": "Burgershop-HTTP",
                "category": "shop",
                "connectorType": "HTTP",
                "location": "localhost:8080"
            },

            {
                "name": "Burgershop-RMI",
                "category": "shop",
                "connectorType": "RMI",
                "location": "localhost:9250"
            }
            ],
            "@charts": []
        }
	],


    "@connectors": [
        {
            "type": "HTTP",
            "className": "org.moskito.control.connectors.HttpConnector"
        },
        {
            "type": "RMI",
            "className": "org.moskito.control.connectors.RMIConnector"
        }
    ],

    "@statusUpdater": {
        "checkPeriodInSeconds": 10,
        "threadPoolSize": 10,
        "timeoutInSeconds": 60,
        "enabled": true
    },

    "@chartsUpdater": {
        "checkPeriodInSeconds": 40,
        "threadPoolSize": 5,
        "timeoutInSeconds": 60,
        "enabled": true
    }

}