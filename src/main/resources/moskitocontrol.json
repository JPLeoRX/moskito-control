{
    "mailNotificationEnabled" : false,
    "opsgenieNotificationEnabled" : true,
    "slackNotificationEnabled" : true,
    "notificationsMutingTime": 60,
    "defaultApplication" : "Daemons",

    "@applications": [
        {
            "name": "BurgerShop",
            "@components": [
                {
                    "name": "local",
                    "category": "web",
                    "connectorType": "HTTP",
                    "location": "localhost:8080"
                }
            ]
        }
    ],
    "@charts": [
        {
            "name": "WorkLoad",
            "limit": 100,
            "@lines": [
                {
                    "component": "first",
                    "accumulator": "WorkerLoad",
                    "caption": "first"
                },
                {
                    "component": "second",
                    "accumulator": "WorkerLoad",
                    "caption": "second"
                },
                {
                    "component": "third",
                    "accumulator": "WorkerLoad",
                    "caption": "third"
                }
            ]
        }
    ],


    "@connectors": [
        {
            "type": "HTTP",
            "className": "org.moskito.control.connectors.HttpConnector"
        },
        {
            "type": "RMI",
            "className": "org.moskito.control.connectors.RMIConnector"
        },
        {
            "type": "JDBC",
            "className": "org.moskito.control.connectors.JDBCConnector"
        },
        {
            "type": "MONGO",
            "className": "org.moskito.control.connectors.MongoConnector"
        },
        {
            "type": "URL",
            "className": "org.moskito.control.connectors.HttpURLConnector"
        }
    ],

    "@statusUpdater": {
        "checkPeriodInSeconds": 10,
        "threadPoolSize": 10,
        "timeoutInSeconds": 60,
        "enabled": true
    },

    "@chartsUpdater": {
        "checkPeriodInSeconds": 40,
        "threadPoolSize": 5,
        "timeoutInSeconds": 60,
        "enabled": true
    }

}